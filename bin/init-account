#!/usr/bin/env pyston3

import argparse
import logging
import os
import os.path
import sys
import typing

from solana.account import Account
from solana.transaction import Transaction

sys.path.insert(0, os.path.abspath(
    os.path.join(os.path.dirname(__file__), '..')))
import mango  # nopep8

parser = argparse.ArgumentParser(description="Initializes a Mango margin account")
mango.Context.add_command_line_parameters(parser)
mango.Wallet.add_command_line_parameters(parser)
args = parser.parse_args()

logging.getLogger().setLevel(args.log_level)

context = mango.Context.from_command_line_parameters(args).new_from_cluster("devnet")
wallet = mango.Wallet.from_command_line_parameters_or_raise(args)

group = mango.Group.load(context, context.group_id)

mango_account = Account()
init = mango.build_create_account_instructions(context, wallet, group, mango_account)

signers: typing.Sequence[Account] = [wallet.account, mango_account]

transaction = Transaction()
transaction.instructions.extend(init)
response = context.client.send_transaction(transaction, *signers, opts=context.transaction_options)
transaction_id = context.unwrap_transaction_id_or_raise_exception(response)
print("Signature:", transaction_id)
