#!/usr/bin/env bash

CURRENT_DIRECTORY="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

docker run -it --rm \
    -e GRANT_SUDO=yes --user root \
    -p 8888:8888 \
    --name mango-markets \
    -v ${CURRENT_DIRECTORY}/..:/home/jovyan/work \
    mango-markets:latest \
    start.sh jupyter lab --NotebookApp.iopub_data_rate_limit=9e9
